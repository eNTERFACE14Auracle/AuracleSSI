<?xml version="1.0" ?>
<pipeline ssi-v="1">

	<!-- register dlls -->
	<register>
		<load name="ssiioput.dll"/>
		<load name="ssimouse.dll"/>
		<load name="ssigraphic.dll"/>
		<load name="ssisignal.dll"/>
	</register>
	
	<!-- set framework options -->
	<framework console="true" cpos="400,200,400,400" monitor="true" mpos="400,0,400,200" sync="true" sport="9999" stype="0" slisten="true" countdown="0"/>
	
	<!-- sensor -->	
	<sensor create="ssi_sensor_SocketReader" port="9998" type="0" sbyte="4" sdim="2" stype="9" ssr="5.0">		
		<provider channel="socket" pin="cursor"/>
	</sensor>

	<!-- triggered consumer -->
	<consumer create="ssi_consumer_FileWriter" type="1">
		<input pin="cursor" frame="1"/>		
	</consumer>
	
</pipeline>