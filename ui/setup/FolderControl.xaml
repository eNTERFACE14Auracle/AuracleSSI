<Window x:Class="ssi.FolderControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <TreeView Name="treeView" Loaded="TreeView_Loaded" Grid.Row="0" Margin="5"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="ButtonSelect" Margin="5" Padding="5" Click="ButtonSelect_Click">Select</Button>
            <Button Name="ButtonCancel" Margin="5" Padding="5" Click="ButtonCancel_Click">Cancel</Button>
        </StackPanel>
        
    </Grid>
</Window>
