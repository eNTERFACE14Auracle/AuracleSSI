<Window x:Class="ssi.UserDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner"        
    Title="Create User" Height="120" Width="300" Background="WhiteSmoke">
    <Grid Margin="5">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0" Margin="5">Name:</Label>
        <TextBox Name="nameText" Grid.Column="1" Grid.Row="0" Margin="5"></TextBox>

        <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="5">
            <Button Click="CreateClick" Margin="5" BorderBrush="LightGray" Background="White">Create</Button>
            <Button Click="CancelClick" BorderBrush="LightGray" Background="White" Margin="5">Cancel</Button>
        </StackPanel>

    </Grid>
</Window>
