<UserControl x:Class="ssi.MediaControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto" AllowDrop="True">
    
    <Grid
        VerticalAlignment="Stretch" 
        HorizontalAlignment="Stretch"
        Width="Auto"
        Height="Auto">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid
            Grid.Column="0"
            Grid.Row="0"
            Name="videoGrid">
        </Grid>
        
        <Grid 
            Grid.Column="0"
            Grid.Row="1"
            Name="audioGrid">
        </Grid>

    </Grid>
    
</UserControl>
