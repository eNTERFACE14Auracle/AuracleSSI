<UserControl x:Class="ssi.StimuliControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto">
    <Grid>
        <ListView Name="list">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="Auto" Header="ID" DisplayMemberBinding="{Binding SourceType}"/>
                    <GridViewColumn Width="Auto" Header="Source" DisplayMemberBinding="{Binding SourceInfo}"/>
                    <GridViewColumn Width="Auto" Header="Trigger" DisplayMemberBinding="{Binding SlideType}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
