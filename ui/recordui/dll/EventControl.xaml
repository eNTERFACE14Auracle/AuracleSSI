<UserControl x:Class="ssi.EventControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto">
    <Grid>
        <ListView Name="list">
            <ListView.View>
                <GridView AllowsColumnReorder="true">
                    <GridViewColumn DisplayMemberBinding= "{Binding Path=Label}" Header="Label" Width="Auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Start}" Header="Start" Width="Auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Duration}" Header="Duration" Width="Auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Store}" Header="Store" Width="Auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Change}" Header="Change" Width="Auto"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
