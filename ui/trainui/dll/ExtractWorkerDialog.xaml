<Window x:Class="ssi.ExtractWorkerDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Training / Evaluation" Height="145" Width="400">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <ProgressBar Name="progress" Grid.Column="0" Grid.Row="0" Value="0" Maximum="1" Margin="5"></ProgressBar>
        <Label Name="info" Grid.Column="0" Grid.Row="1">...</Label>
        <Button Name="cancel" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right" BorderBrush="LightGray" Background="White" Margin="5">Cancel</Button>
        
    </Grid>
</Window>
